<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/primarycolor1"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/iv_slideImage"
        android:layout_marginTop="100dp"
        android:padding="30dp"
        android:layout_width="390dp"
        android:layout_height="390dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/c1" />

    <TextView
        android:id="@+id/tv_slideTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Get over every addiction"
        android:textSize="20dp"
        android:gravity="center"
        android:textColor="@color/primarycolor2"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tv_slideDetail"
        android:layout_margin="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/slide1text"
        android:textColor="@color/primarycolor2"
        android:textSize="15dp"
        android:lineSpacingExtra="6sp"
        android:textStyle="normal"
        />


</LinearLayout>