                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/brolinkregular"
                            android:text="Common siQns"></TextView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="15dp"
                            android:text="You may have one or more of these warning signs:\n\n1.  An urge to use the drug every day, or many times a day.\n\n2.  Taking more drugs than you want to, and for longer than you thought you would.\n\n3.  Always having the drug with you, and buying it even if you can’t afford it.\n\n4.  Using drugs even if they cause you trouble at work or make you lash out at family and friends.\n\n5.  Spending more time alone.\n\n6.  Not taking care of yourself or caring how you look.\n\n7.  Stealing, lying, or doing dangerous things, like driving while high or having unsafe sex.\n\n8.  Spending most of your time getting, using, or recovering from the effects of the drug.\n\n9.  Feeling sick when you try to quit.\n"
                            android:textColor="@color/primarycolor2"></TextView>

                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
