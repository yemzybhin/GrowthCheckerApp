<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Pages.Homepage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">



    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        app:cardElevation="0dp"
        android:foreground="@drawable/profilestroke"
        app:cardCornerRadius="50dp">

        <ImageView
            android:id="@+id/iv_homeimage"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:src="@drawable/a40" />
    </androidx.cardview.widget.CardView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="2dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_homename"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:text=""
                        android:textColor="@color/primarycolor2"
                        android:textSize="12sp"
                        android:textStyle="bold" />



                        <ImageView
                            android:id="@+id/iv_homelevelimage"
                            android:layout_width="70dp"
                            android:layout_height="20dp"
                            android:src="@drawable/l1"></ImageView>

                        <TextView
                            android:id="@+id/tv_homelevelcomment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="2dp"
                            android:text="No Comment Yet!!"
                            android:textAllCaps="true"
                            android:textColor="@color/primarycolor2"
                            android:textSize="10sp"
                            android:textStyle="bold"></TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:background="@drawable/scorebg"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="1.5dp"
                        android:background="@drawable/scorebg2"
                        android:orientation="vertical"
                        android:padding="5dp">

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_height="30dp"
                            android:layout_marginLeft="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_gravity="center"
                            android:src="@drawable/scorestar"></ImageView>

                        <TextView
                            android:id="@+id/tv_scorecount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="0"
                            android:textSize="10sp"
                            android:textColor="@color/white"
                            android:textStyle="bold"></TextView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/fr_ungoingchallenge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                >
            </androidx.fragment.app.FragmentContainerView>

        </LinearLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>