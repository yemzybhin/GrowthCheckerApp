<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="MYDIALOG2">
        <item name="android:windowBackground">#000000</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowSoftInputMode">stateUnspecified</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimAmount">.70</item>
    </style>

    <style name="TimePicker" parent="ThemeOverlay.MaterialComponents.TimePicker">
        <item name="colorPrimary">@color/black</item>
        <item name="fontFamily">@font/productsansregular</item>
        <item name="materialTimePickerTitleStyle">@style/TextAppearance.AppCompat</item>
        <item name="materialClockStyle">@style/TimePicker.Clock</item>
        <item name="materialButtonOutlinedStyle">@style/TimePicker.Button</item>
        <item name="chipStyle">@style/TimePicker.Chip</item>
        <item name="imageButtonStyle">@style/TimePicker.ImageButton</item>
        <item name="borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="TimePicker.Clock" parent="Widget.MaterialComponents.TimePicker.Clock">
        <item name="clockFaceBackgroundColor">@color/primarycolor1</item>
        <item name="clockHandColor">#E45D528C</item>
        <item name="clockNumberTextColor">@color/primarycolor2</item>
    </style>

    <style name="TimePicker.Button" parent="Widget.MaterialComponents.TimePicker.Button">
        <item name="android:textColor">@color/primary3</item>
        <item name="strokeWidth">1dp</item>
    </style>

    <style name="TimePicker.Chip" parent="Widget.MaterialComponents.TimePicker.Display">
        <item name="chipBackgroundColor">@color/primarycolor1</item>
        <item name="android:textColor">@color/primarycolor2</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat</item>
    </style>

    <style name="TimePicker.ImageButton" parent="Widget.MaterialComponents.TimePicker.ImageButton">
        <item name="iconTint">@color/primary3</item>
    </style>
</resources>